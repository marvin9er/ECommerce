<p id="notice"><%= notice %></p>

<h1>Armor Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Armor</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @armor_orders.each do |armor_order| %>
      <tr>
        <td><%= armor_order.order_id %></td>
        <td><%= armor_order.armor_id %></td>
        <td><%= armor_order.price %></td>
        <td><%= link_to 'Show', armor_order %></td>
        <td><%= link_to 'Edit', edit_armor_order_path(armor_order) %></td>
        <td><%= link_to 'Destroy', armor_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

